<%= form_with model: order, html: { id: "order-form", class: "bg-white shadow rounded p-6 space-y-4" } do |f| %>
  <% if order.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 p-3 rounded">
      <p class="font-semibold mb-2"><%= pluralize(order.errors.count, "error") %> prevented this order from being saved:</p>
      <ul class="list-disc list-inside">
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col space-y-1">
    <%= f.label :name, class: "font-medium" %>
    <%= f.text_field :name, class: "border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex flex-col space-y-1">
    <%= f.label :address, class: "font-medium" %>
    <%= f.text_field :address, class: "border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <%= f.submit "Confirm", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>

  <%= render partial: "breakdown", locals: { order_products:, total: } %>
<% end %>
