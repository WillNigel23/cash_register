<h1> Checkout </h1>

<%= form_with model: @order, html: { class: "order-form" } do |f| %>
   <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, required: true %>
  </div>

  <%= f.submit "Confirm" %>

  <%= render partial: "breakdown", locals: { order_products: @order_products, total: @total } %>
<% end %>
