<span id="breakdown" class="mt-6 block">
  <h1 class="text-xl font-bold mb-3"><%= t("titles.breakdown") %></h1>

  <div class="overflow-x-auto">
    <table class="min-w-full border border-gray-200 divide-y divide-gray-200">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2 text-left text-gray-700 font-semibold"><%= t("titles.product") %></th>
          <th class="px-4 py-2 text-left text-gray-700 font-semibold"><%= t("titles.quantity") %></th>
          <th class="px-4 py-2 text-left text-gray-700 font-semibold"><%= t("titles.original_price") %></th>
          <th class="px-4 py-2 text-left text-gray-700 font-semibold"><%= t("titles.promo_price") %></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% order_products.each do |order_product| %>
          <tr>
            <td class="px-4 py-2 flex items-center space-x-2">
              <%= link_to remove_product_carts_path(cart_id: @current_cart.id, product_id: order_product.product_id),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "text-red-500 hover:text-red-700" do %>
                  <i class="fa fa-trash"></i>
              <% end %>
              <span><%= order_product.product.name %></span>
            </td>
            <td class="px-4 py-2"><%= "#{formatted_price(order_product.product.price)} x #{order_product.quantity}" %></td>
            <td class="px-4 py-2"><%= formatted_price(order_product.product.price * order_product.quantity) %></td>
            <td class="px-4 py-2"><%= formatted_price(order_product.actual_price) %></td>
          </tr>
        <% end %>
        <tr class="font-semibold bg-gray-50">
          <td class="px-4 py-2"><%= t("titles.total") %></td>
          <td></td>
          <td></td>
          <td class="px-4 py-2"><%= formatted_price(total) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</span>
